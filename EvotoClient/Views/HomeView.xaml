<UserControl x:Class="EvotoClient.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EvotoClient.Views"
             xmlns:converters="clr-namespace:EvotoClient.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"

             DataContext="{Binding Home, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <converters:BoolToVisibilityHiddenConverter x:Key="BoolToVisibilityHiddenConverter" />
    </UserControl.Resources>

    <Grid Margin="0 10 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" MaxHeight="30" />
            <RowDefinition Height="71*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" Padding="16 0" >Available Votes</TextBlock>

        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                     Grid.Row="1" Grid.Column="0"
                     IsIndeterminate="True"
                     Visibility="{Binding Loading, Converter={StaticResource BoolToVisibilityHiddenConverter}}"
                     VerticalAlignment="Center" HorizontalAlignment="Center"
                     Margin="5 5 5 5" />

        <ListBox 
            Grid.Row="1" 
            ItemsSource="{Binding Votes}" 
            BorderBrush="Transparent" 
            HorizontalContentAlignment="Stretch"
            SelectedItem="{Binding SelectedVote}"
            Visibility="{Binding VotesVisible, Converter={StaticResource BoolToVisibilityHiddenConverter}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <TextBlock Padding="16 0 0 0" Grid.Row="0" FontWeight="Bold" Text="{Binding Name}" />
                        <TextBlock Padding="16 0 0 0" Grid.Row="1" Text="{Binding Info}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        


        <TextBlock
            Grid.Row="1"
            Visibility="{Binding NoVotesMessageVisible, Converter={StaticResource BoolToVisibilityHiddenConverter}}"
            FontWeight="Bold"
            Text="No Votes Available" />

        <Button Grid.Row="2" Command="{Binding ProceedCommand}">Proceed</Button>
        <Button Grid.Row="3" Command="{Binding RefreshCommand}">Refresh</Button>
    </Grid>
</UserControl>